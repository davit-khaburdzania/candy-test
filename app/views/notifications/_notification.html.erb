<div class="toast show align-items-center" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="d-flex">
    <div class="toast-body">
      <%= notification.content %>
    </div>
    <%= form_for notification, url: set_seen_notification_path(notification), method: :post, remote: true, html: { class: 'd-inline' } do |f| %>
      <%= f.submit "", class: "btn-close me-2 m-auto", 'data-bs-dismiss': 'toast', 'aria-label': "Close" %>
    <% end %>
  </div>
</div>